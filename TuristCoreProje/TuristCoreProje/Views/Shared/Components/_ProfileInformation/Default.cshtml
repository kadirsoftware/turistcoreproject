<div class="col-12 mt-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Profil Bilgileri</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/Member/Profile/Index/">
                        <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3 m-t-1">
            <hr class="horizontal gray-light my-4">
            <ul class="list-group">
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Ad Soyad:</strong> &nbsp; @ViewBag.memberName</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Kullanıcı Adı:</strong> &nbsp; @ViewBag.memberUserName</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Telefon:</strong> &nbsp; @ViewBag.memberPhone</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; @ViewBag.memberMail</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Konum:</strong> &nbsp; Türkiye</li>
            </ul>
        </div>
    </div>
</div>