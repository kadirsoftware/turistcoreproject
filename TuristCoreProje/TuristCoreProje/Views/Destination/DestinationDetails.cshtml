@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Detayları</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index/">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Detaylar </li>
                </ul>
            </div>
        </div>
    </section>

    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content">
                        <img src="/Traversal-Liberty/assets/images/banner2.jpg" class="radius-image img-fluid mb-5" alt="" />
                    </div>
                </div>
                <div class="single-post-content">
                    <p class="alphabet mb-4">
                        <span class="big-letter">T</span>@Model.Details1
                    </p>
                    <blockquote class="blockquote my-5">
                        <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                        “Seyahat için yaptığın yatırım; kendin için yaptığın en iyi yatırımdır.”
                        <footer class="blockquote-footer mt-3">
                            Matthew Karsten
                        </footer>
                    </blockquote>
                    <div class="sing-post-thumb mb-5 row pt-3">
                        <div class="col-sm-6">
                            <a href="#url"><img src="/Traversal-Liberty/assets/images/g8.jpg" class="img-fluid radius-image" alt=""></a>
                        </div>
                        <div class="col-sm-6 mt-sm-0 mt-3">
                            <a href="#url"><img src="/Traversal-Liberty/assets/images/g9.jpg" class="img-fluid radius-image" alt=""></a>
                        </div>
                    </div>
                    <h3 class="blog-desc-big m-0 mb-lg-4 mb-3">2.paragraf</h3>
                    <p class="mb-4">
                        @Model.Details2
                    </p>


                    @await Component.InvokeAsync("_CommentList", new {id =ViewBag.i})


                    <partial name="/Views/Comment/AddComment.cshtml" />

                </div>
            </div>
        </div>
    </section>
</body>